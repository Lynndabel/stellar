# Soroban Time-Locked Savings Contract - Environment Variables
# Copy this content to your .env file and fill in the values

# ============================================
# NETWORK CONFIGURATION
# ============================================
SOROBAN_NETWORK=testnet
SOROBAN_RPC_URL=https://soroban-testnet.stellar.org
SOROBAN_NETWORK_PASSPHRASE="Test SDF Network ; September 2015"

# ============================================
# ACCOUNT CONFIGURATION
# ============================================
# Run: soroban keys generate deployer-account --network testnet
# Then: soroban keys fund deployer-account --network testnet
# Get secret: soroban keys show deployer-account
STELLAR_SECRET_KEY=

# Run: soroban keys generate admin-account --network testnet
# Then: soroban keys fund admin-account --network testnet
# Get secret: soroban keys show admin-account
ADMIN_SECRET_KEY=

# ============================================
# CONTRACT CONFIGURATION
# ============================================
# These will be auto-filled when you deploy
CONTRACT_ID=
TOKEN_ADDRESS=
EMERGENCY_PENALTY=1000

# ============================================
# TESTING CONFIGURATION
# ============================================
TEST_AMOUNT=10000000
TEST_LOCK_DURATION=86400
TEST_INTEREST_RATE=500

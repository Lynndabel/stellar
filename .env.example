# Soroban Time-Locked Savings Contract - Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# NETWORK CONFIGURATION
# ============================================

# Network to deploy to: testnet, futurenet, or mainnet
SOROBAN_NETWORK=testnet

# RPC URL for the network
# Testnet: https://soroban-testnet.stellar.org
# Futurenet: https://rpc-futurenet.stellar.org
# Mainnet: https://soroban-rpc.mainnet.stellar.org (when available)
SOROBAN_RPC_URL=https://soroban-testnet.stellar.org

# Network passphrase
# Testnet: "Test SDF Network ; September 2015"
# Futurenet: "Test SDF Future Network ; October 2022"
# Mainnet: "Public Global Stellar Network ; September 2015"
SOROBAN_NETWORK_PASSPHRASE="Test SDF Network ; September 2015"

# ============================================
# ACCOUNT CONFIGURATION
# ============================================

# Your Stellar secret key (starts with S...)
# NEVER commit this to git! Keep it in .env only
# Get testnet account from: https://laboratory.stellar.org/#account-creator?network=test
STELLAR_SECRET_KEY=SXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Admin account secret key (for contract administration)
ADMIN_SECRET_KEY=SXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# ============================================
# CONTRACT CONFIGURATION
# ============================================

# Deployed contract ID (will be generated after deployment)
CONTRACT_ID=

# Token contract address for savings (e.g., USDC, XLM, or custom token)
# For testnet XLM: Use native Stellar asset
TOKEN_ADDRESS=

# Emergency withdrawal penalty in basis points (e.g., 1000 = 10%)
EMERGENCY_PENALTY=1000

# ============================================
# DEPLOYMENT SETTINGS
# ============================================

# Contract WASM hash (generated during build)
WASM_HASH=

# Source account for deployment fees
SOURCE_ACCOUNT=

# ============================================
# TESTING CONFIGURATION
# ============================================

# Test user accounts (for integration testing)
TEST_USER_1_SECRET=SXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX
TEST_USER_2_SECRET=SXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Test token amount (in stroops, 1 XLM = 10,000,000 stroops)
TEST_AMOUNT=10000000

# Test lock duration in seconds (e.g., 86400 = 1 day)
TEST_LOCK_DURATION=86400

# Test interest rate in basis points (e.g., 500 = 5%)
TEST_INTEREST_RATE=500

# ============================================
# FRONTEND CONFIGURATION (if applicable)
# ============================================

# Frontend API URL
NEXT_PUBLIC_API_URL=http://localhost:3000

# Contract address for frontend
NEXT_PUBLIC_CONTRACT_ID=

# Network for frontend
NEXT_PUBLIC_NETWORK=testnet

# ============================================
# OPTIONAL: HORIZON API
# ============================================

# Horizon API URL (for account/transaction queries)
# Testnet: https://horizon-testnet.stellar.org
# Mainnet: https://horizon.stellar.org
HORIZON_URL=https://horizon-testnet.stellar.org
